{% extends "./layout.peb" %}

{% block content %}
<h2>Settings</h2>

<h3>Schedule Definition</h3>
<table>
    {% for schedule in schedules %}
        <tr><td><a href="settings/schedule?id={{ schedule.id }}">{{ schedule.name }}</a> </td><td>{{ schedule.summary }}</td></tr>
    {% endfor %}
    <tr><td><a href="settings/schedule?new">[New]</a></td></tr>
</table>

{% endblock %}